{
  "include": ["src/**/*.*", "src/**/*.vue"],
  "extends": [
    "@my/configs.js/tsconfig.base.json",
    "@my/configs.js/tsconfig.base.vite.json"
  ],

  "compilerOptions": {
    "composite": true,
    "noEmit": true,

    // Otherwise utility libraries like @vueuse/* can cause lin errors because
    //  their `lib` target is almost always set to `esnext` and the use
    //  sometimes unavailable API's.
    "skipLibCheck": true,

    "lib": ["ES2024", "DOM", "DOM.Iterable"],

    // TODO: move to @my/configs.js ?
    "target": "esnext",

    // TODO: move to @my/configs.js
    "types": ["vite/client"]

    // TODO
    // "erasableSyntaxOnly": true
  }
}
